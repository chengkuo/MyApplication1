<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/room_cover_36"
        android:id="@+id/chat_room_window"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="正在直播"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_room_window"
        android:layout_alignLeft="@+id/chat_room_window"
        android:layout_alignStart="@+id/chat_room_window"
        android:id="@+id/nowchat_room"
        android:layout_alignRight="@+id/chat_room_window"
        android:layout_alignEnd="@+id/chat_room_window"
        android:background="#64000000"
        android:drawableRight="@drawable/nim_ic_message_actionbar_team"
        android:paddingRight="15dp"
        android:textColor="#fff"
        android:gravity="center_vertical|left"
        />

    <TextView
        android:text="正在加载"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_room_window"
        android:layout_alignLeft="@+id/chat_room_window"
        android:gravity="center_vertical|left"
        android:id="@+id/chat_room_name" />

    <TextView
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_count"
        android:textColor="#fff"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/nowchat_room"
        android:layout_alignRight="@+id/chat_room_window"
        android:layout_alignEnd="@+id/chat_room_window"
        android:layout_alignTop="@+id/nowchat_room" />


</RelativeLayout>
